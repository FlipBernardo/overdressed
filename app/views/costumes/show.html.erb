<div class = "show-container">
  <div class="row">
    <div class="col-12 col-md-6">
      <br>
      <div class="img-container">
        <%= image_tag @costume.photo_url %>
      </div>
      <br>
      <br>
      <br>
    </div>

    <div class="col-12 col-md-6">
      <div class = "description">
        <h2><%= @costume.name %></h2>
        <hr>
        <h4> Description: </h4>
          <p><%= @costume.description %></p>
        <h4> Category: </h4>
          <p><%= @costume.category %></p>
        <h4> Size: </h4>
          <p><%= @costume.size %></p>

      <br>
      <br>
      <% if current_user == @costume.user %>
        <div>
          <div class="booking-container" id='booking-btns'>
              <%= link_to "Edit this costume", edit_costume_path(@costume), class: " btn book-btn" %>
              <hr>
              <%= link_to "Delete this costume", costume_path(@costume), class: "btn book-btn", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this costume?" } %>
          </div>
        </div>
      <% else %>
        <div>
          <div class="booking-container" id='booking-btns' style="width: 40vw">
            <h2>Rent this costume from <strong>£<%= @costume.price.round %>/day</strong></h2>
            <br>
            <div class="simple_form">
              <%= simple_form_for [@costume, @booking] do |f| %>
                <%= f.input :start_date, html5: true %>
                <%= f.input :end_date, html5: true %>
                <br>
                <hr>
                <p>Price £<%= @costume.price.round  %> per day</p>
                <%= f.button :submit, value: "Book now", class: "book-btn" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
