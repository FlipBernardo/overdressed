<div class = "show-container">
  <div class="row">
    <div class="col-12 col-md-6">
    <br>
        <div class="img-container">
        <%= image_tag @costume.photo_url %>
        </div>

  <br>
    <br>
     <br>

    </div>
    <br>
    <br>
    <br>
    <br>
    <div class="col-12 col-md-6">
          <div class = "description">
             <h2><%= @costume.name %></h2>
  <hr>
          <h4> Description: </h4>
         <p> <%= @costume.description %> </p>
          <h4> Category: </h4>
          <p><%= @costume.category %></p>
          <h4> Size: </h4>
           <p><%= @costume.size %> </h4></p>
         </div>

         <br>
          <br>
        <% if current_user == @costume.user %>
            <%= link_to "Edit this costume", edit_costume_path(@costume), class: "btn btn-cancel" %>
            <%= link_to "Delete this costume", costume_path(@costume), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this costume?" } %>
        <% else %>
          <div class="booking-container">
            <h2>Rent this costume from <strong>£<%= @costume.price %>/day</strong></h2>
            <br>
            <div class="simple_form">
              <%= simple_form_for [@costume, @booking] do |f| %>
                <%= f.input :start_date, html5: true %>
                <%= f.input :end_date, html5: true %>
                <br>
                <hr>
                <p>Price £<%= @costume.price  %></p>
                <%= f.button :submit, value: "Book now", class: "book-btn" %>
              <% end %>
             </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
