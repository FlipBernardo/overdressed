<!DOCTYPE html>
<html>
  <head>
    <title>Overdressed</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>




    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
   <div class="navbar">
    <div class="logo">OVERDRESSED</div>
    <% if user_signed_in? %>
      <div class="sign-up">
         <li>
              <%= link_to "All Costumes", costumes_path, class: "nav-item2 active" %>
              <%= link_to " + Add a Costume", new_costume_path, class: "nav-item2 active" %>
              <%= link_to "My Bookings", my_booking_path, class: "nav-item2 active" %>
              <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete}, class: "nav-item2 active" %>
          </li>
      </div>
    <% else %>
      <ul class="sign-up">
          <li>
              <%= link_to "Sign up", new_user_registration_path, class: "nav-item1 active" %>
          </li>
          <li>
            <%= link_to "Log in", new_user_session_path, class: "nav-item2" %>
          </li>
      </ul>
    <% end %>
    </div>
    <%= yield %>

    <%# <div class="footer">
      <div class="footer-links">
        <a href="#"><i class="fab fa-instagram"></i></a>
        <a href="#"><i class="fab fa-facebook"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
      </div>
      <div class="footer-copyright">
        This footer is made with <i class="fas fa-heart"></i> at Overdressed
      </div>
    </div> %>
  </body>
</html>
